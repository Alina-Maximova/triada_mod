{
  "expo": {
    "name": "mob2",
    "slug": "mob2",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "mob2",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "infoPlist": {
       "NSPhotoLibraryUsageDescription": "Это приложение использует фото-библиотеку для выбора изображений для отчетов",
        "NSCameraUsageDescription": "Это приложение использует камеру для съемки фото для отчетов",
        "NSPhotoLibraryAddUsageDescription": "Это приложение сохраняет фото в вашу галерею"
      },
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/logo.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/logo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ],
      "package": "com.alinamaxi.mob2"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Разрешить доступ к фото-библиотеке для сохранения снимков",
          "savePhotosPermission": "Разрешить сохранение снимков в фото-библиотеку",
          "isAccessMediaLocationEnabled": true
        }
      ],
      
      [
        "expo-image-picker",
        {
          "photosPermission": "Разрешить $(PRODUCT_NAME) доступ к фото для выбора изображений"
        }
      ],
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Разрешить $(PRODUCT_NAME) использовать ваше местоположение."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#ffffff",
          "defaultVolume": true,
          "defaultVibrate": true
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a0d7fce9-a930-4e98-8341-7139e3fa8dc9"
      }
    }
  }
}
