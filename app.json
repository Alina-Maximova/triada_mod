{
  "expo": {
    "name": "triada",
    "slug": "triada",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "triada",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    
    "ios": {
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Это приложение использует фото-библиотеку для выбора изображений для отчетов",
        "NSCameraUsageDescription": "Это приложение использует камеру для съемки фото для отчетов",
        "NSPhotoLibraryAddUsageDescription": "Это приложение сохраняет фото в вашу галерею",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "194.87.238.237": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            },
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            },
            "10.0.2.2": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            }
          }
        }
      },
      "supportsTablet": true
    },
    
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/log1.png",
        "backgroundImage": "./assets/images/background.png",
        "monochromeImage": "./assets/images/log1.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "usesCleartextTraffic": true,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.INTERNET"
      ],
      "package": "com.alinamaxi.triada"
    },
    
    "web": {
      "output": "static",
      "favicon": "./assets/images/logo.png",
      "bundler": "metro"
    },
    
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Разрешить доступ к фото-библиотеке для сохранения снимков",
          "savePhotosPermission": "Разрешить сохранение снимков в фото-библиотеку",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Разрешить $(PRODUCT_NAME) доступ к фото для выбора изображений"
        }
      ],
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Разрешить $(PRODUCT_NAME) использовать ваше местоположение."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#ffffff",
          "defaultVolume": true,
          "defaultVibrate": true
        }
      ],
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "networkSecurityConfig": "@xml/network_security_config"
          },
          "ios": {
            "usesNonExemptEncryption": false
          }
        }
      ]
    ],
    
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "03fcced2-c150-4c9f-be44-428f44b2efc7"
      },
      "apiUrl": "http://194.87.238.237:5000"
    }
  }
}